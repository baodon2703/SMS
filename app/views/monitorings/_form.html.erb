<%= form_for(@monitoring) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>

    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>

    <%= form.label :content %>
    <%= form.text_field :content, class: 'form-control'%>

    <%= form.label :warning %>
    <%= form.text_field :warning, class: 'form-control'%>

    <%= form.label :critical %>
    <%= form.text_field :critical, class: 'form-control'%>

    <%= form.label :failure_flow %>
    <%= form.text_field :failure_flow, class: 'form-control'%>

    <%= form.label :interval %>
    <%= form.text_field :interval, class: 'form-control'%>

    <%= form.label :retry_num %>
    <%= form.text_field :retry_num, class: 'form-control'%>

    <%= form.label :timeout %>
    <%= form.text_field :timeout, class: 'form-control'%>

    <%= form.label :route %>
    <%= form.text_field :route, class: 'form-control'%>

    <%= form.label :other %>
    <%= form.text_field :other, class: 'form-control'%>

    <%= form.label :tool %>
    <%= form.text_field :tool, class: 'form-control'%>
    
    <%= hidden_field_tag :server_id, params[:server_id] %>

    <%= form.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
