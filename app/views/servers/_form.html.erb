<%= form_for(@server) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>

    <%= form.label :serial_number %>
    <%= form.text_field :serial_number, class: 'form-control'%>

    <%= form.label :type %>
    <%= form.text_field :type, class: 'form-control'%>

    <%= form.label :os %>
    <%= form.text_field :os, class: 'form-control'%>

    <%= form.label :ip_address %>
    <%= form.text_field :ip_address, class: 'form-control'%>

    <%= form.label :application %>
    <%= form.text_field :application, class: 'form-control'%>

    <%= hidden_field_tag :project_id, params[:project_id] %>

    <%= form.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
